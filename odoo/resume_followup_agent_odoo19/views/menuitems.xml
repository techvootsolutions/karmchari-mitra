<?xml version="1.0"?>
<odoo>
    <menuitem
        name="Resume Follow-Up"
        id="menu_resume_followup_root"
        web_icon="resume_followup_agent_odoo19,static/description/icon.png"
        sequence="100"/>

    <record id="action_resume_dashboard_url" model="ir.actions.act_url">
        <field name="name">Dashboard</field>
        <field name="url">/resume_followup/dashboard</field>
        <field name="target">self</field>
    </record>

    <menuitem
        name="Dashboard"
        id="menu_resume_dashboard"
        parent="menu_resume_followup_root"
        action="action_resume_dashboard_url"
        sequence="10"/>

    <menuitem
        name="Job Positions"
        id="menu_job_positions"
        parent="menu_resume_followup_root"
        action="action_job_position"
        sequence="15"/>

    <menuitem
        name="Candidates"
        id="menu_resume_candidates"
        parent="menu_resume_followup_root"
        action="action_resume_candidate"
        sequence="20"/>

    <menuitem
        name="Conversations"
        id="menu_resume_conversations"
        parent="menu_resume_followup_root"
        action="action_resume_conversation"
        sequence="30"/>

    <menuitem
        name="Configuration"
        id="menu_resume_configuration"
        parent="menu_resume_followup_root"
        sequence="90"/>

    <menuitem
        name="Agent Settings"
        id="menu_resume_agent_settings"
        parent="menu_resume_configuration"
        action="action_resume_agent_settings"
        sequence="10"/>

    <menuitem
        name="Telephony Configuration"
        id="menu_resume_telephony_config"
        parent="menu_resume_configuration"
        action="action_resume_telephony_config"
        sequence="20"/>

</odoo>
